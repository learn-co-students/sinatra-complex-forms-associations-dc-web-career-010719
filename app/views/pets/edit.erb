<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH"></input>
<label for="pet_name">Name:</label>
<input type="text" name='pet[name]' id='pet_name' value="<%=@pet.name%>"></input>
  <p></p>


<label for="pet[owner_id]">Update Owner</label><br>
  <% @owners.each do |owner| %>
<input type="radio" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>" <%='checked' if
  @pet.owner == owner %>>
  <%= owner.name %></input>
  <% end %>
  <br><br>

  and/or Create new owner:
  <br><br>
  <label for="Owner">New Owner:</label><br>
  <input type="text" name="owner[name]" id="owner_name"></input>

  <input type="submit" value="Update Pet"></input>



</form>

